{
  "name": "studytomo",
  "version": "1.0.0",
  "private": true,
  "description": "StudyTomo Monorepo (frontend + worker)",
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "pnpm prettier --write",
      "pnpm eslint --fix"
    ]
  }
}
